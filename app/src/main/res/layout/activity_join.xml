<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".join">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:text="Room"
        android:textSize="20sp"
        android:textColor="@color/login_checkBox"
        android:id="@+id/room"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_below="@+id/room"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/room"
        android:inputType="text"
        android:background="@drawable/button_corner"
        android:hint="Enter room Id"
        android:textColorHint="@color/login_checkBox"
        android:drawableLeft="@drawable/ic_login_email"
        android:padding="10dp"
        android:textColor="@color/login_checkBox"
        android:drawablePadding="10dp"
        android:id="@+id/roomId" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/buttonaa"
        android:layout_below="@id/roomId"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/roomId"
        android:text="Submit"
        android:id="@+id/submit" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/submit"
        android:layout_marginTop="15dp"
        android:id="@+id/relaylout" >

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:id="@+id/list"
            android:background="@drawable/listview"/>

    </RelativeLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>