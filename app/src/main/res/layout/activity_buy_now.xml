<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".buyNow">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:text="Buy Now"
        android:textSize="20sp"
        android:textColor="@color/login_checkBox"
        android:id="@+id/room"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_below="@+id/room"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/room"
        android:inputType="text"
        android:background="@drawable/button_corner"
        android:hint="No of Kgs"
        android:textColorHint="@color/login_checkBox"
        android:drawableLeft="@drawable/ic_product"
        android:padding="10dp"
        android:textColor="@color/login_checkBox"
        android:drawablePadding="10dp"
        android:id="@+id/roomId" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/buttonaa"
        android:layout_below="@id/roomId"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/roomId"
        android:text="Buy Now"
        android:id="@+id/submit" />

</RelativeLayout>